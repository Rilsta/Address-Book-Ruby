<h1>Email Form</h1>

<form action="/contact/<%= @contact.id() %>/email_form" method="post">
  <div class="form-group">
    <label>Type</label>
    <input type="text" class="form-control" id="type" name="type" placeholder="First Name">
  </div>

  <div class="form-group">
    <label>Email Address</label>
    <input type="text" class="form-control" id="email_address" name="email_address" placeholder="Last Name">
  </div>

  <button type="submit" class="btn btn-default">Submit</button>
</form>
